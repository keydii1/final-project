extends ../../layouts/default.pug

block main
  .container.mt-4
    h2.mb-4 Danh sách sản phẩm

    // Bộ lọc và Tìm kiếm
    .mb-3
  form(id="form-search")
    .input-group
      input(
        type="text" 
        placeholder="Nhập từ khóa" 
        name="keyword" 
        class="form-control"
      )
      .input-group-append
        button.btn.btn-success(type="submit") Tìm


  each item in fillterStatus
      button(type="button" button-status=item.status class=item.class) #{item.name}

  

  table.table.table-bordered.table-striped
      thead
        tr
          th STT
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Trạng thái
          th Hành động
      tbody
        each item, index in products
          tr
            td #{index + 1}
            td
              img(src=item.thumbnail, alt="Sản phẩm", width="100", height="auto")
            td Sản phẩm #{index + 1}
            td #{item.price}$
            td
              if item.status == 'Hoạt động'
                span.badge.badge-success #{item.status}
              else
                span.badge.badge-secondary #{item.status}
            td
              button.btn.btn-warning.btn-sm Sửa
              button.btn.btn-danger.btn-sm.ml-1 Xoá
