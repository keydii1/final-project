extends ../../layouts/default.pug


block main
    .container.mt-4
    h2.mb-4 Danh sách sản phẩm
    table.table.table-bordered.table-striped
      thead
        tr
          th STT
          th Hình ảnh
          th Tiêu đề
          th Giá
          th Trạng thái
          th Hành động
      tbody
        //- Product 1
        each item, index in products
            tr
            td #{index + 1}
            td
                img(src=item.thumbnail, alt="Sản phẩm 1", width="100", height="auto")
            td Sản phẩm #{index + 1}
            td #{item.price}$
            td
                a(href="#", class="badge badge-success") #{item.status}
            td
                button(class="btn btn-warning btn-sm") Sửa
                button(class="btn btn-danger btn-sm ml-1") Xoá

