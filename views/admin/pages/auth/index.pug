extends ../../layouts/default.pug

include ../../mixins/alert.pug

block main
	.container.mt-5
		.row.justify-content-center
			.col-md-6
				.card
					.card-header.text-center
						h3.mb-0 Đăng nhập quản trị
					.card-body
						//- Thông báo thành công / lỗi từ mixin
						+alert-success(3000)
						+alert-error(5000)

						//- Form đăng nhập
						form(action=`${prefixAdmin}/auth/login` method="POST")
							//- Nếu ứng dụng có CSRF token, controller nên truyền `csrfToken`
							if typeof csrfToken !== 'undefined'
								input(type='hidden' name='_csrf' value=csrfToken)

							.form-group
								label(for='email') Email
								input#email.form-control(type='email' name='email' placeholder='Nhập email' required value=(typeof formData !== 'undefined' && formData.email ? formData.email : ''))

							.form-group
								label(for='password') Mật khẩu
								input#password.form-control(type='password' name='password' placeholder='Nhập mật khẩu' required)

							.form-group.form-check
								input#remember.form-check-input(type='checkbox' name='remember')
								label.form-check-label(for='remember') Ghi nhớ đăng nhập

							.form-group
								button.btn.btn-primary.btn-block(type='submit') Đăng nhập

						.mt-3.text-center
							a(href=`${prefixAdmin}/auth/forgot`) Quên mật khẩu?

	//- Small inline styles to center the card on the page when the admin header/sider exist
	style.
		.container.mt-5 { max-width: 720px; }
