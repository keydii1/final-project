extends ../../layouts/default.pug
include ../../mixins/hox-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head('Danh sách sản phẩm')
    
    .row
      each items in products
        .col-4.mb-3
          .product-item
            .inner-image
              img(src=items.thumbnails, alt="Ảnh không hiển thị")
            .inner-content
              h3.inner-title= items.title
              .inner-price-new= items.price + '$'
              .inner-price-old 100$
              .inner-discount= items.discountPercentage + '%'
